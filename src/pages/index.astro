---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import SocialPill from "../icons/SocialPill.astro";
import GitHub from "../icons/GitHub.astro";
import Gmail from "../icons/Gmail.astro";
import Experiencia from "../components/Experiencia.astro";
import SectionContainer from "../components/SectionContainer.astro";
import BriefCase from "../icons/BriefCase.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
---

<Layout
	title="Portafolio de Miguel - Programador Y Desarrollador Web"
	description="Esto es la decripcion"
>
	<main class="px-4">
		<SectionContainer class="">
			<img
				class="rounded-full w-36 h-26 mb-4"
				src="./selfie-sinfondo.png"
				alt="Foto Miguel"
			/>

			<h1
				class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10"
			>
				Hey, soy Miguel Ángel
				<div class="flex justify-center items-center">
					<a
						href="https://www.linkedin.com/in/miguel-%C3%A1ngel-sol%C3%ADs-mu%C3%B1oz-b1302b238/"
						target="_blank"
						rel="noopener"
					>
						<Badge>Disponible para trabajar</Badge>
					</a>
				</div>
			</h1>
			<h2 class="text-2xl text-wrap">
				<span>+2 años de experiencia.</span>
				<span class="text-9966FF font-bold">
					Desarrollador de Software y Deportista.
				</span>
				<span class="text-9966FF font-bold">De Mérida, España.</span>
				Especializado en  programacion multiplataforma con diversas tecnologías.
			</h2>
			<nav class="flex gap-x-4 mt-8 flex-wrap">
				<SocialPill
					href="https://www.linkedin.com/in/miguel-%C3%A1ngel-sol%C3%ADs-mu%C3%B1oz-b1302b238/"
				>
					<LinkedIn class="w-6 h-6" />
					LinkedIn
				</SocialPill>

				<SocialPill href="https://github.com/MikePuroShow">
					<GitHub class="w-6 h-6" />
					GitHub
				</SocialPill>

				<SocialPill href="mailto:mgasolis@gmail.com">
					<Gmail class="w-6 h-6" />
					mgasolis@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<BriefCase class="size-7" />
				Experiencia Laboral
			</h2>
			<Experiencia />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			
			<Projects />
		</SectionContainer>



	</main>
</Layout>
